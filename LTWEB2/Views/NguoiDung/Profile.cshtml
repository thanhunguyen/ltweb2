
@section view_title{
    Thông tin người dùng
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Tên đăng nhập</th>
            <th>Số điện Thoại</th>
            <th>Tên đầy đủ</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@LTWEB2.Helpers.CurrentContext.CurUser().TenDangNhap</td>
            <td>@LTWEB2.Helpers.CurrentContext.CurUser().SoDienThoai</td>
            <td>@LTWEB2.Helpers.CurrentContext.CurUser().TenDayDu</td>
            <td>@LTWEB2.Helpers.CurrentContext.CurUser().Email</td>
        </tr>
    </tbody>
    
</table>
<div class='col-sm-12'>
    <button class='btn btn' type='submit' id='submit'><i class="fa fa-check"></i> Sửa thông tin tài khoản </button>
</div>


























