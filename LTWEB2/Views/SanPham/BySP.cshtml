@using LTWEB2.Models

@model List<SanPham>

@section view_title{
    Danh sách sản phẩm
}
@section css{
    <style type="text/css">
        .caption-lg-orange {
            font-weight: bold;
            font-size: 13pt;
            color: #fc6e04;
        }

        .caption-lg-red {
            font-weight: bold;
            font-size: 11pt;
            color: #f00;
        }
         .padding{
            padding-top:8px;

        }
    </style>
}

    @if (Model.Count == 0)
    {
        <div class="row">
            <div class="col-md-12">
                Không có sản phẩm
            </div>
        </div>

    }
    else
    {
        <div class="row">
            @foreach (SanPham c in Model)
            {
                <div class="col-sm-6 col-md-6">
                    <div class="thumbnail ">               
                            <img style="width:242px;height:300px" src="~/Hinh/SP/@c.SanPhamID/main_hinh.jpg" alt="@c.TenSanPham" title="@c.TenSanPham">
                       
                        <br />
                        <br />
                        <span class="caption-lg-orange">@c.TenSanPham</span><br />
                        <br />
                        <span class="caption-lg-red">Giá bán: @string.Format("{0:N0}", c.GiaBan)</span><br />
                        Số lượng: @c.SoLuongTon<br />
                        Số lượt xem: @c.SoLuotXem<br />
                        Số lượt bán: @c.SoLuotBan<br />
                        Xuất sứ: @c.XuatXu<br />
                        <br />
                        <p>
                            <button @Url.Action("Detail","SanPham" ) type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                                Chi tiết
                            </button>
                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <img width="300" height="400" src=" ~/Hinh/SP/@c.SanPhamID/main_hinh.jpg" title="@c.TenSanPham" />

                                                </div>
                                                <div class="col-md-12 caption-lg-orange">
                                                    <h3>@c.TenSanPham</h3>

                                                </div>
                                                <div class="col-md-12 padding">
                                                    <span class="caption-lg-red">Giá bán: @string.Format("{0:N0}", c.GiaBan)</span>

                                                </div>
                                                <div class="col-md-12 padding">
                                                    Số lượng: @c.SoLuongTon
                                                </div>
                                                <div class="col-md-12 padding">
                                                    @Html.Raw(HttpUtility.HtmlDecode(c.MoTa))

                                                </div>
                                            </div>

                                        </div>
                                        
                                    </div>
                                </div>
                            </div>




                            <a href="#" class="btn btn-success" role="button">
                                <i class="fa fa-cart-plus"></i>
                                Dặt hàng
                            </a>
                        </p>

                    </div>
                </div>

            }

        </div>
    
        <div class="row">
            <div class="col-md-12">
                <nav>
                    <ul class="pagination ">
                        <li>
                        <a href="?curPage=@ViewBag.PrevPage" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a>
                        </li>
                        @for (int i = 1; i <= ViewBag.Pages; i++)
                        {

                            <li @if (i==ViewBag.CurPage) { <text> class="active" </text> } >
                                 <a href="?curPage=@i">@i</a>
                            </li>
                        }
                        <li>
                        <a href="?curPage=@ViewBag.NextPage" aria-label="Next"><span aria-hidden="true">&raquo;</span></a>
                        </li>
                     
                    </ul>
                </nav>
            </div>
        </div>
    
}

            




        


