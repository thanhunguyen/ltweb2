@using LTWEB2.Models

@model List<SanPham>

@section view_title{
    Danh sách sản phẩm
}
@section css{
    <style type="text/css">
        .caption-lg-orange {
            font-weight: bold;
            font-size: 13pt;
            color: #fc6e04;
        }

        .caption-lg-red {
            font-weight: bold;
            font-size: 11pt;
            color: #f00;
        }
    </style>
}
<div class="row">
    @if (Model.Count == 0)
    {
        <div class="col-md-12">
            Không có sản phẩm
        </div>
    }
    else
    {
        foreach (SanPham c in Model)
        {
            <div class="col-sm-6 col-md-6">
                <div class="thumbnail">
                    <img src="..." alt="...">
                    <br />
                    <br />
                    <span class="caption-lg-orange">@c.TenSanPham</span><br />
                    <br />
                    <span class="caption-lg-red">Giá bán: @string.Format("{0:N0}", c.GiaBan)</span><br />
                    Số lượng: @c.SoLuongTon<br />
                    Số lượt xem: @c.SoLuotXem<br />
                    Số lượt bán: @c.SoLuotBan<br />
                    Xuất sứ: @c.XuatXu<br />
                    <br />
                    <p>
                        <a href="#" class="btn btn-primary" role="button">
                            <i class="fa fa-list-ul"></i>
                            Chi Tiết
                        </a>
                        <a href="#" class="btn btn-success" role="button">
                            <i class="fa fa-cart-plus"></i>
                            Dặt hàng
                        </a>
                    </p>

                </div>
            </div>

        }
    }


</div>